<%= render "shared/second-header"%>

<%= form_with model: resource, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>
  <div class="form-group icon">
    <h2 class="account">アカウントをお持ちでない方はこちら</h2>
    <%= link_to "新規会員登録", new_user_path, class:"input-default registration-form" %>
  </div>
  <div class="form-group icon">
    <%= image_tag 'google.jpg' , size: '20x20' ,id: "google-icon" %>
    <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, class:"input-default password-form", method: :post%>
  </div>
  <div class="form-group icon">
    <i class="fab fa-facebook-square", id="facebook-icon"></i>
    <%= link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, class:"input-default facebook-form", method: :post%>
  </div>
  <div class='login-flash-message login-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>